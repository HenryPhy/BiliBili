<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/cook_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@mipmap/d_doge" />

    <TextView
        android:id="@+id/cook_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cook_iv"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/cook_iv"
        android:layout_toRightOf="@+id/cook_iv"
        android:text="额"
        android:textColor="#f00"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/cook_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cook_iv"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_toEndOf="@+id/cook_iv"
        android:layout_toRightOf="@+id/cook_iv"
        android:text="狗一只"
        android:textSize="18sp" />
    <ImageView
        android:id="@+id/line"
        android:layout_below="@+id/cook_iv"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"/>
</RelativeLayout>